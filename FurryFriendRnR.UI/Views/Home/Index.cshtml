@{
    ViewBag.Title = "Home";
}


<!-- Welcome -->
<section class="section-welcome bg1-pattern p-t-120 p-b-105">
    <div class="container">
        <div class="row">
            <div class="col-md-6 p-t-45 p-b-30">
                <div class="wrap-text-welcome t-center">
                    <span class="tit2 t-center">
                        Furry Friend R n' R
                    </span>

                    <h3 class="tit3 t-center m-b-35 m-t-5">
                        Welcome
                    </h3>

                    <p class="t-center m-b-22 size3 m-l-r-auto">
                        We are a family owned business with a dedicated heart for making the best part of your family part of our family! Top notch services at prices you can afford.
                    </p>

                    <a href="@Url.Action("About","Home")" class="txt4">
                        Our Story
                        <i class="fa fa-long-arrow-right m-l-10" aria-hidden="true"></i>
                    </a>
                </div>
            </div>

            <div class="col-md-6 p-b-30">
                <div class="wrap-pic-welcome size2 bo-rad-10 hov-img-zoom m-l-r-auto">
                    <img src="~/Content/images/BookService.jpg" alt="IMG-OUR">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Intro -->
<section class="section-intro">
    <div class="header-intro parallax100 t-center p-t-135 p-b-158" style="background-image: url('/Content/images/BackgroundImage.jpg');">
        <span class="tit2 p-l-15 p-r-15">
            Discover
        </span>
        <h3 class="tit4 t-center p-l-15 p-r-15 p-t-3">
            Furry Friend R n' R
        </h3>
    </div>

    <div class="content-intro bg-white p-t-77 p-b-133">
        <div class="container">
            <div class="row">
                <div class="col-md-4 p-t-30">
                    <!-- Discover 1 -->
                    <div class="blo1">
                        <div class="wrap-pic-blo1 bo-rad-10 hov-img-zoom">
                            <a><img src="~/Content/images/RnR.jpg" alt="IMG-INTRO"></a>
                        </div>

                        <div class="wrap-text-blo1 p-t-35">
                            <a>
                                <h4 class="txt5 color0-hov trans-0-4 m-b-13">
                                    Rest &amp; Relaxation
                                </h4>
                            </a>

                            <p class="m-b-20">
                                Our abode is designed to provide that rest and relaxation that the furry friends in our family deserve.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 p-t-30">
                    <!-- Discover 2 -->
                    <div class="blo1">
                        <div class="wrap-pic-blo1 bo-rad-10 hov-img-zoom">
                            <a><img src="~/Content/images/family.jpg" alt="IMG-INTRO"></a>
                        </div>

                        <div class="wrap-text-blo1 p-t-35">
                            <a>
                                <h4 class="txt5 color0-hov trans-0-4 m-b-13">
                                    We're Family
                                </h4>
                            </a>

                            <p class="m-b-20">
                                The moment your furry family is introducted to FF Rn'R they are our family as well. They are treated with respect and pampered throughout their entire vacation!
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 p-t-30">
                    <!-- Discover 3 -->
                    <div class="blo1">
                        <div class="wrap-pic-blo1 bo-rad-10 hov-img-zoom">
                            <a><img src="~/Content/images/homeaway.jpg" alt="IMG-INTRO"></a>
                        </div>

                        <div class="wrap-text-blo1 p-t-35">
                            <a>
                                <h4 class="txt5 color0-hov trans-0-4 m-b-13">
                                    Home Away From Home
                                </h4>
                            </a>

                            <p class="m-b-20">
                                Our abode was designed with your pet in mind. They will have all the luxuries that you provide aqnd can't promise they will be excited to leave. Instead they would wish you could move in with them.
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

